<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="SplitIt"
        android:textColor="@android:color/white"
        android:textSize="90sp" />

    <RelativeLayout
        android:id="@+id/auth_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="New ideas, new splits!"
            android:textColor="#90a4ae"
            android:textSize="25dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:backgroundTint="@color/white"
            android:textColor="#fff"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/email_field"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/white"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#fff"
                android:textColorHint="@color/white" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/stroke"
            android:layout_width="230dp"
            android:layout_height="5dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/stroke" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"
            android:textColor="#fff"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/password_field"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:backgroundTint="@color/white"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:textColorHint="@color/white">

            </EditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/b_sign_in"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:text="Log in"
            android:textColor="@android:color/white"
            android:textStyle="bold">

        </android.support.v7.widget.AppCompatButton>

        <ImageView
            android:id="@+id/secondStroke"
            android:layout_width="90dp"
            android:layout_height="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/b_sign_in"
            android:layout_marginRight="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/stroke" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b_sign_in"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="Or"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/secondStrokeSecond"
            android:layout_width="90dp"
            android:layout_height="5dp"
            android:layout_below="@+id/b_sign_in"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/stroke" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/b_sign_up"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/secondStroke"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonsign"
            android:text="Sign Up"
            android:textColor="@android:color/black"
            android:textStyle="bold">

        </android.support.v7.widget.AppCompatButton>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/reg_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/reg_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Registration"
            android:textColor="#90a4ae"
            android:textSize="35sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_reg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/reg_view"
            android:layout_below="@+id/reg_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:textColor="#fff"
            android:textColorHint="@color/white"
            android:textSize="25sp">

            <EditText
                android:id="@+id/login_reg_field"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="Login"
                android:textColor="#fff"
                android:textColorHint="@color/white"
                android:textSize="25sp" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/stroke1"
            android:layout_width="230dp"
            android:layout_height="5dp"
            android:layout_below="@+id/login_reg"
            android:layout_centerHorizontal="true"
            android:background="@drawable/stroke" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_reg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/login_reg"
            android:layout_below="@+id/login_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:textColor="#fff"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/email_reg_field"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#fff"
                android:textColorHint="@color/white"
                android:textSize="25sp" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/stroke2"
            android:layout_width="230dp"
            android:layout_height="5dp"
            android:layout_below="@+id/email_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/stroke" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_reg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/email_reg"
            android:layout_below="@+id/email_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:textColor="#fff"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/password_reg_field"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:textColorHint="@color/white"
                android:textSize="25sp" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/stroke3"
            android:layout_width="230dp"
            android:layout_height="5dp"
            android:layout_below="@+id/password_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/stroke" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_repeat_reg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/password_reg"
            android:layout_below="@+id/password_reg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/white"
            android:textColor="#fff"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/password_repeat_reg_field"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="Password again"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:textColorHint="@color/white"
                android:textSize="25sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/reg_button"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:background="@drawable/button_black"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textStyle="bold">

        </android.support.v7.widget.AppCompatButton>

    </RelativeLayout>


</RelativeLayout>